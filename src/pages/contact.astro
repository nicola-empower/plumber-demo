---
import Layout from "../layouts/Layout.astro";
import { Phone, Mail, MapPin, Clock, Calendar } from "lucide-react";
---

<Layout title="Contact | Elite Plumbing Solutions">
    <main class="bg-white min-h-screen">
        <div class="bg-blue-950 py-16 sm:py-24">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <h1
                        class="text-4xl font-bold tracking-tight text-white sm:text-6xl font-serif"
                    >
                        Contact Us
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-blue-200">
                        For emergencies, please call. For projects, please fill
                        out the form below for a consultation.
                    </p>
                </div>
            </div>
        </div>

        <div
            class="mx-auto max-w-7xl px-6 lg:px-8 -mt-12 sm:-mt-24 relative z-10 pb-24"
        >
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Info Card -->
                <div
                    class="bg-blue-900 text-white p-8 rounded-3xl shadow-xl h-fit"
                >
                    <h3 class="text-2xl font-bold font-serif mb-6">
                        Get in Touch
                    </h3>
                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div class="bg-red-600 p-2 rounded-lg">
                                <Phone class="h-5 w-5 text-white" />
                            </div>
                            <div>
                                <p class="font-bold text-red-400">
                                    Emergency Line (24/7)
                                </p>
                                <a
                                    href="tel:02081234567"
                                    class="text-xl font-bold hover:text-white transition-colors"
                                    >020 8123 4567</a
                                >
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <div class="bg-blue-800 p-2 rounded-lg">
                                <Mail class="h-5 w-5 text-blue-300" />
                            </div>
                            <div>
                                <p class="font-bold">General Enquiries</p>
                                <a
                                    href="mailto:hello@eliteplumbing.co.uk"
                                    class="hover:text-blue-300 transition-colors"
                                    >hello@eliteplumbing.co.uk</a
                                >
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <div class="bg-blue-800 p-2 rounded-lg">
                                <MapPin class="h-5 w-5 text-blue-300" />
                            </div>
                            <div>
                                <p class="font-bold">Service Area</p>
                                <p>London, Surrey & surrounding areas.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form -->
                <div
                    class="lg:col-span-2 bg-white rounded-3xl shadow-xl p-8 sm:p-12 border border-gray-100"
                >
                    <form class="space-y-8">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="first-name"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >First name</label
                                >
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="first-name"
                                        id="first-name"
                                        autocomplete="given-name"
                                        class="block w-full rounded-lg border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                            <div>
                                <label
                                    for="last-name"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Last name</label
                                >
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="last-name"
                                        id="last-name"
                                        autocomplete="family-name"
                                        class="block w-full rounded-lg border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                            <div class="sm:col-span-2">
                                <label
                                    for="email"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Email address</label
                                >
                                <div class="mt-2">
                                    <input
                                        id="email"
                                        name="email"
                                        type="email"
                                        autocomplete="email"
                                        class="block w-full rounded-lg border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>

                            <!-- Purpose -->
                            <div class="sm:col-span-2">
                                <label
                                    class="block text-sm font-medium leading-6 text-gray-900 mb-2"
                                    >I am interested in...</label
                                >
                                <div
                                    class="grid grid-cols-1 sm:grid-cols-2 gap-4"
                                >
                                    <div
                                        class="flex items-center ps-4 border border-gray-200 rounded-lg"
                                    >
                                        <input
                                            id="service-bathroom"
                                            type="radio"
                                            value="bathroom"
                                            name="service-type"
                                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500"
                                        />
                                        <label
                                            for="service-bathroom"
                                            class="w-full py-4 ms-2 text-sm font-medium text-gray-900"
                                            >New Bathroom / Design</label
                                        >
                                    </div>
                                    <div
                                        class="flex items-center ps-4 border border-gray-200 rounded-lg"
                                    >
                                        <input
                                            id="service-heating"
                                            type="radio"
                                            value="heating"
                                            name="service-type"
                                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500"
                                        />
                                        <label
                                            for="service-heating"
                                            class="w-full py-4 ms-2 text-sm font-medium text-gray-900"
                                            >Boiler / Heating</label
                                        >
                                    </div>
                                    <div
                                        class="flex items-center ps-4 border border-gray-200 rounded-lg"
                                    >
                                        <input
                                            id="service-repair"
                                            type="radio"
                                            value="repair"
                                            name="service-type"
                                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500"
                                        />
                                        <label
                                            for="service-repair"
                                            class="w-full py-4 ms-2 text-sm font-medium text-gray-900"
                                            >General Repair</label
                                        >
                                    </div>
                                    <div
                                        class="flex items-center ps-4 border border-gray-200 rounded-lg"
                                    >
                                        <input
                                            id="service-landlord"
                                            type="radio"
                                            value="landlord"
                                            name="service-type"
                                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500"
                                        />
                                        <label
                                            for="service-landlord"
                                            class="w-full py-4 ms-2 text-sm font-medium text-gray-900"
                                            >Landlord Certificate</label
                                        >
                                    </div>
                                </div>
                            </div>

                            <div class="sm:col-span-2">
                                <label
                                    for="message"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Details</label
                                >
                                <div class="mt-2">
                                    <textarea
                                        id="message"
                                        name="message"
                                        rows="4"
                                        class="block w-full rounded-lg border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6"
                                        placeholder="Tell us more about your project..."
                                    ></textarea>
                                </div>
                            </div>
                        </div>
                        <button
                            type="submit"
                            class="w-full rounded-full bg-blue-600 px-3.5 py-3 text-center text-sm font-bold text-white shadow-lg hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-all transform hover:scale-[1.01]"
                            >Send Enquiry</button
                        >
                    </form>
                </div>
            </div>
        </div>
    </main>
</Layout>
