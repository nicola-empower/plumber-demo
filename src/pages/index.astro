---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import {
	PenTool,
	ShoppingBag,
	Droplets,
	ArrowRight,
	CheckCircle,
	Clock,
	ShieldCheck,
	Phone,
} from "lucide-react";

const serviceFeatures = [
	{
		title: "Design Service",
		desc: "3D CAD planning to visualize your new suite before we lay a single tile. We ensure perfect spatial flow.",
		icon: PenTool,
	},
	{
		title: "Premium Fittings",
		desc: "We partner with Grohe, Duravit, and Hansgrohe to deliver hotel-quality finishes that stand the test of time.",
		icon: ShoppingBag,
	},
	{
		title: "Wet Rooms",
		desc: "Specialist waterproofing for seamless, accessible level-access showers that scream luxury.",
		icon: Droplets,
	},
];
---

<Layout title="Elite Plumbing Solutions | Emergency & Luxury Bathrooms">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-[90vh] w-full overflow-hidden mb-12">
			<img
				src="/hero.png"
				alt="Luxury bathroom interior"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.7]"
			/>
			<div class="absolute inset-0 bg-blue-950/30 -z-10"></div>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-3xl animate-fade-in-up">
					<div
						class="inline-flex items-center gap-2 rounded-full bg-red-600/90 backdrop-blur-sm px-4 py-1.5 text-sm font-bold text-white mb-8 shadow-lg animate-pulse"
					>
						<Clock size={16} /> 24/7 Priority Response Available
					</div>
					<h1
						class="text-5xl font-bold tracking-tight text-white sm:text-7xl mb-6 drop-shadow-xl font-serif"
					>
						Plumbing Emergency? <br />
						<span class="text-blue-200">We'll Fix It Fast.</span>
					</h1>
					<p
						class="mt-6 text-xl leading-8 text-blue-50 drop-shadow-md max-w-2xl font-light"
					>
						Don't stress. We are local, Gas Safe registered, and
						available right now. No hidden call-out fees—just rapid
						expert help when you need it most.
					</p>
					<div class="mt-10 flex flex-wrap items-center gap-6">
						<a
							href="tel:02081234567"
							class="rounded-full bg-red-600 px-8 py-4 text-lg font-bold text-white shadow-lg hover:bg-red-500 transition-all duration-300 scale-100 hover:scale-105 flex items-center gap-2"
						>
							<Phone size={20} />
							Call Priority Line
						</a>
						<a
							href="/services"
							class="rounded-full bg-white/10 backdrop-blur-md border border-white/30 px-8 py-4 text-lg font-semibold text-white hover:bg-white hover:text-blue-900 transition-all duration-300"
						>
							View Services
						</a>
					</div>
				</div>
			</div>

			<!-- Floating Trust Bar -->
			<div
				class="absolute bottom-0 w-full bg-white/95 backdrop-blur-md border-t border-gray-200 z-20"
			>
				<TrustBar client:visible />
			</div>
		</div>

		<!-- Triage Tool Section (Automation Hook) -->
		<div class="py-16 sm:py-24 bg-blue-50">
			<div class="mx-auto max-w-3xl px-6 lg:px-8 text-center">
				<h2
					class="text-3xl font-bold tracking-tight text-blue-900 sm:text-4xl mb-8 font-serif"
				>
					Diagnose Your Issue Instantly
				</h2>
				<div
					class="bg-white p-8 rounded-2xl shadow-xl border border-blue-100"
				>
					<p class="text-gray-600 mb-6">
						Not sure if it’s an emergency? Select your problem to
						check engineer availability.
					</p>
					<div
						class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-left"
					>
						<button
							class="p-4 border rounded-xl hover:bg-blue-50 hover:border-blue-300 transition-all flex items-center gap-3 group"
						>
							<div
								class="bg-blue-100 p-2 rounded-lg text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors"
							>
								<Droplets size={20} />
							</div>
							<span class="font-semibold text-gray-700"
								>Burst Pipe / Leak</span
							>
						</button>
						<button
							class="p-4 border rounded-xl hover:bg-blue-50 hover:border-blue-300 transition-all flex items-center gap-3 group"
						>
							<div
								class="bg-blue-100 p-2 rounded-lg text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors"
							>
								<ShieldCheck size={20} />
							</div>
							<span class="font-semibold text-gray-700"
								>Gas Smell / Boiler</span
							>
						</button>
						<button
							class="p-4 border rounded-xl hover:bg-blue-50 hover:border-blue-300 transition-all flex items-center gap-3 group"
						>
							<div
								class="bg-blue-100 p-2 rounded-lg text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors"
							>
								<Clock size={20} />
							</div>
							<span class="font-semibold text-gray-700"
								>No Hot Water</span
							>
						</button>
						<button
							class="p-4 border rounded-xl hover:bg-blue-50 hover:border-blue-300 transition-all flex items-center gap-3 group"
						>
							<div
								class="bg-blue-100 p-2 rounded-lg text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors"
							>
								<CheckCircle size={20} />
							</div>
							<span class="font-semibold text-gray-700"
								>Annual Service</span
							>
						</button>
					</div>
					<div class="mt-8 pt-8 border-t border-gray-100">
						<a
							href="/contact"
							class="text-blue-600 font-bold hover:text-blue-500"
							>Check Availability in Your Postcode &rarr;</a
						>
					</div>
				</div>
			</div>
		</div>

		<!-- Sanctuary Section -->
		<FeatureSection
			client:visible
			title="Sanctuary Bathrooms"
			subtitle="Designed for Relaxation"
			description="Transform your bathroom into a personal spa. From rainfall showers to underfloor heating, we manage the entire installation process with minimal disruption to your home."
			features={serviceFeatures}
			imageSrc="/hero.png"
			align="left"
			quote={null}
			author={null}
		/>

		<!-- Differentiation Section -->
		<div class="bg-white py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center">
					<h2
						class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl font-serif"
					>
						Not Just Another Plumber
					</h2>
					<p class="mt-6 text-lg leading-8 text-gray-600">
						We know the stereotype: messy, late, and vague about
						costs. We are the opposite. We treat your home like our
						own.
					</p>
				</div>
				<div
					class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none"
				>
					<dl
						class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3"
					>
						<div
							class="flex flex-col items-start bg-stone-50 p-8 rounded-2xl"
						>
							<div
								class="rounded-lg bg-blue-600 p-2 ring-1 ring-blue-600/10 text-white mb-4"
							>
								<ShieldCheck
									className="h-6 w-6"
									aria-hidden="true"
								/>
							</div>
							<dt
								class="text-xl font-bold leading-7 text-gray-900"
							>
								Shoe Covers Worn
							</dt>
							<dd
								class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-600"
							>
								<p class="flex-auto">
									Always. We respect your floors and carpets
									from the moment we step through the door.
								</p>
							</dd>
						</div>
						<div
							class="flex flex-col items-start bg-stone-50 p-8 rounded-2xl"
						>
							<div
								class="rounded-lg bg-blue-600 p-2 ring-1 ring-blue-600/10 text-white mb-4"
							>
								<CheckCircle
									className="h-6 w-6"
									aria-hidden="true"
								/>
							</div>
							<dt
								class="text-xl font-bold leading-7 text-gray-900"
							>
								Floor Protection
							</dt>
							<dd
								class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-600"
							>
								<p class="flex-auto">
									We use heavy-duty mats to create safe
									walkways and protect your carpets during
									work.
								</p>
							</dd>
						</div>
						<div
							class="flex flex-col items-start bg-stone-50 p-8 rounded-2xl"
						>
							<div
								class="rounded-lg bg-blue-600 p-2 ring-1 ring-blue-600/10 text-white mb-4"
							>
								<Clock className="h-6 w-6" aria-hidden="true" />
							</div>
							<dt
								class="text-xl font-bold leading-7 text-gray-900"
							>
								Rubbish Removed
							</dt>
							<dd
								class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-600"
							>
								<p class="flex-auto">
									We take the old boiler, bath, and tiles with
									us. Your home is left spotless.
								</p>
							</dd>
						</div>
					</dl>
				</div>
			</div>
		</div>

		<!-- Recent Work Section -->
		<div class="bg-blue-50 py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2
						class="text-3xl font-bold tracking-tight text-blue-900 sm:text-4xl font-serif"
					>
						Recent Work
					</h2>
					<p class="mt-4 text-lg text-gray-600">
						Latest bathroom installations and repairs.
					</p>
				</div>
				<div class="mx-auto max-w-4xl">
					<img
						src="/plumber.png"
						alt="Recent plumbing project"
						class="w-full rounded-2xl shadow-xl ring-1 ring-blue-900/10 object-cover aspect-video"
					/>
				</div>
			</div>
		</div>

		<Testimonials
			client:visible
			reviews={[
				{
					text: "Fixed the burst pipe preventing major water damage. Clean, professional, and transparent pricing. Saved our wood floors!",
					author: "Sarah J.",
					location: "Kensington",
					role: "Emergency Repair",
					rating: 5,
				},
				{
					text: "It's like having a hotel suite at home. The tiling is perfect, and the team suggested a layout I hadn't even thought of.",
					author: "James S.",
					location: "Chelsea",
					role: "Bathroom Renovation",
					rating: 5,
				},
				{
					text: "Arrived within 45 minutes as promised. The engineer wore shoe covers and was incredibly polite. Highly recommend.",
					author: "Michael T.",
					location: "Richmond",
					role: "Leak Repair",
					rating: 5,
				},
			]}
		/>

		<!-- Split CTA Section -->
		<div class="bg-white py-16 sm:py-24" id="contact">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2
						class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl font-serif"
					>
						How can we help you today?
					</h2>
				</div>
				<div
					class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto"
				>
					<!-- Crisis Option -->
					<div
						class="bg-red-50 rounded-3xl p-8 border-2 border-red-100 flex flex-col items-center text-center hover:shadow-xl transition-shadow"
					>
						<div
							class="bg-red-100 p-4 rounded-full text-red-600 mb-6"
						>
							<Clock size={32} />
						</div>
						<h3 class="text-2xl font-bold text-gray-900 mb-2">
							Need Help Now?
						</h3>
						<p class="text-gray-600 mb-8 grow">
							Call our 24/7 priority line for immediate dispatch
							to your location.
						</p>
						<a
							href="tel:02081234567"
							class="w-full rounded-full bg-red-600 px-8 py-3.5 text-lg font-bold text-white shadow-lg hover:bg-red-500 transition-all flex justify-center items-center gap-2"
						>
							Call Priority Line
						</a>
					</div>

					<!-- Project Option -->
					<div
						class="bg-blue-50 rounded-3xl p-8 border-2 border-blue-100 flex flex-col items-center text-center hover:shadow-xl transition-shadow"
					>
						<div
							class="bg-blue-100 p-4 rounded-full text-blue-600 mb-6"
						>
							<PenTool size={32} />
						</div>
						<h3 class="text-2xl font-bold text-gray-900 mb-2">
							Planning a Project?
						</h3>
						<p class="text-gray-600 mb-8 grow">
							Book a free design consultation and site survey for
							your new bathroom.
						</p>
						<a
							href="/contact"
							class="w-full rounded-full bg-blue-600 px-8 py-3.5 text-lg font-bold text-white shadow-lg hover:bg-blue-500 transition-all flex justify-center items-center gap-2"
						>
							Book Consultation
						</a>
					</div>
				</div>
			</div>
		</div>

		<FAQ client:visible />
	</main>
</Layout>
