---
import Layout from "../layouts/Layout.astro";
import { Wrench, Droplets, Bath, CheckCircle2 } from "lucide-react";
---

<Layout title="Services | Aqua Flow Plumbing">
    <main class="bg-white">
        <!-- Header -->
        <div class="bg-slate-900 py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <h1
                        class="text-4xl font-header font-extrabold tracking-tight text-white sm:text-6xl"
                    >
                        Flow Mastery
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-slate-300 font-body">
                        Precision plumbing services. We combine rapid
                        diagnostics with high-quality installations.
                    </p>
                </div>
            </div>
        </div>

        <!-- content -->
        <div class="mx-auto max-w-7xl px-6 lg:px-8 py-24">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
                <!-- Emergency -->
                <div class="flex flex-col gap-6">
                    <div
                        class="h-16 w-16 bg-sky-50 border border-sky-200 rounded-full flex items-center justify-center text-sky-600 mb-2 shadow-sm"
                    >
                        <Wrench size={32} />
                    </div>
                    <h3 class="text-3xl font-header font-bold text-slate-900">
                        Emergency Repairs (24/7)
                    </h3>
                    <p class="text-slate-600 text-lg font-body">
                        Water damage waits for no one. Our rapid response team
                        is equipped to stop leaks, unblock drains, and fix burst
                        pipes within 60 minutes.
                    </p>
                    <ul class="space-y-3 text-slate-600 mt-4 font-body">
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-sky-600" /> No Call-Out
                            Charge
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-sky-600" /> Fully Stocked
                            Vans
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-sky-600" /> 12-Month Guarantee
                            on repairs
                        </li>
                    </ul>
                </div>

                <!-- Bathroom -->
                <div class="flex flex-col gap-6">
                    <div
                        class="h-16 w-16 bg-sky-50 border border-sky-200 rounded-full flex items-center justify-center text-sky-600 mb-2 shadow-sm"
                    >
                        <Bath size={32} />
                    </div>
                    <h3 class="text-3xl font-header font-bold text-slate-900">
                        Luxury Bathroom Installation
                    </h3>
                    <p class="text-slate-600 text-lg font-body">
                        Turn your utility into a sanctuary. We manage the entire
                        project, from ripping out the old suite to tiling,
                        plastering, and installing high-end finishes.
                    </p>
                    <ul class="space-y-3 text-slate-600 mt-4 font-body">
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-sky-600" /> Wet Room Specialists
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-sky-600" /> Concealed Shower
                            Valves
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-sky-600" /> Digital 3D Design
                            available
                        </li>
                    </ul>
                </div>

                <!-- Leak Detection -->
                <div class="flex flex-col gap-6">
                    <div
                        class="h-16 w-16 bg-sky-50 border border-sky-200 rounded-full flex items-center justify-center text-sky-600 mb-2 shadow-sm"
                    >
                        <Droplets size={32} />
                    </div>
                    <h3 class="text-3xl font-header font-bold text-slate-900">
                        Non-Invasive Leak Detection
                    </h3>
                    <p class="text-slate-600 text-lg font-body">
                        High water bills? Damp patches? We use acoustic
                        listening devices and tracer gas to locate hidden leaks
                        under floors without lifting a single board.
                    </p>
                    <ul class="space-y-3 text-slate-600 mt-4 font-body">
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-sky-600" /> Pinpoint Accuracy
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-sky-600" /> Insurance Trace
                            & Access Reports
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-sky-600" /> Save thosuands
                            in damage
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </main>
</Layout>
